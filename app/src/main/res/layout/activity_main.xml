<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"
    />

    <TextView
            android:text="Белый снег, серый лед На растрескавшейся земле. Одеялом лоскутным на ней - Город в дорожной петле. А над городом плывут облака Закрывая небесный свет. А над городом - желтый дым Городу две тысячи лет Прожитых под светом Звезды По имени Солнце..."
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:background="#C0C0C0"
            android:textColor="#2F2F2F"
            android:textSize="18sp"
            tools:layout_editor_absoluteY="41dp" tools:layout_editor_absoluteX="67dp"
            android:fontFamily="@font/IndieFlower"
            tools:targetApi="jelly_bean"
            android:textStyle="bold|italic"
    />

    <ImageView
            android:src="@drawable/БобруцковЕвгенийВасильевич"
            android:layout_width="200dp"
            android:layout_height="500dp"
            android:scaleType="fitEnd"
    />
</androidx.constraintlayout.widget.ConstraintLayout>